# Neo Brutalism Todo App Environment Variables

# Application Configuration
VITE_APP_NAME=Neo Brutalism Todo
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=A bold and expressive todo application with neo-brutalist design

# Development Configuration
VITE_DEV_MODE=true
VITE_DEBUG_MODE=false

# Storage Configuration
VITE_STORAGE_KEY=neo-brutalism-todos
VITE_BACKUP_STORAGE_KEY=neo-brutalism-todos-backup

# Theme Configuration
VITE_DEFAULT_THEME=neo-brutal
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_SOUND_EFFECTS=false

# Performance Configuration
VITE_MAX_TASKS=1000
VITE_AUTO_SAVE_INTERVAL=5000
VITE_ANIMATION_DURATION=300

# Feature Flags
VITE_ENABLE_CATEGORIES=true
VITE_ENABLE_PRIORITIES=true
VITE_ENABLE_DUE_DATES=true
VITE_ENABLE_TASK_NOTES=true
VITE_ENABLE_DARK_MODE=false

# API Configuration (for future use)
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_TIMEOUT=10000
VITE_ENABLE_API_SYNC=false

# Analytics (optional)
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=